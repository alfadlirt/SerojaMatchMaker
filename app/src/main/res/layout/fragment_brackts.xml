<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/detail_Uevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Detail Event"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">
                        <TextView
                            android:id="@+id/labelID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Event ID"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/txtID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Of Team Here"
                            android:textSize="15dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">
                        <TextView
                            android:id="@+id/labelName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Event Name"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Of Team Here"
                            android:textSize="15dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">
                        <TextView
                            android:id="@+id/labelTeam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Of Team"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/txtTeam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Of Team Here"
                            android:textSize="15dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">
                        <TextView
                            android:id="@+id/labelType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Elimination Type"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/txtType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KNOCKOUT"
                            android:textSize="15dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">
                        <TextView
                            android:id="@+id/labelCreated"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date Created"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/txtCreated"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Of Team Here"
                            android:textSize="15dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">
                        <TextView
                            android:id="@+id/labelModified"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Updated"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/txtModified"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Of Team Here"
                            android:textSize="15dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">
                        <TextView
                            android:id="@+id/labelStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Event Status"
                            android:textSize="10dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>
                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Of Team Here"
                            android:textSize="15dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorBlack"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:orientation="vertical"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <id.ac.polman.astra.serojamatchmaker.customview.WrapContentHeightViewPager
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/no_content_text"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </ScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>