<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container"
    android:id="@+id/root_card">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorGreen"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="50dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/stage_type_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stage Type"
                    android:textStyle="italic"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:id="@+id/bracket_id_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bracket ID"
                    android:textStyle="italic"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite" />
                <TextView
                android:id="@+id/team_a_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Name"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="12dp"
                android:textColor="@color/colorWhite" />
                <TextView
                    android:id="@+id/skor_a_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:id="@+id/team_b_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Name"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:id="@+id/skor_b_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnInputSkor"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_btn_white">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:text="Score"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>